integer(ip) :: i2
complex(fp) :: dprod(size(psi1_arr, 1), size(psi1_arr, 2))

!$omp workshare
dprod(:,:) = matmul(conjg(transpose(psi1_arr(:,:))), psi2_arr(:,:))
!$omp end workshare

val = (0.0_fp, 0.0_fp)
!$omp parallel do reduction(+:val)
do i2 = 1, size(psi1_arr, 2)
   val = val + sum(dprod(:, i2))
end do
!$omp end parallel do

val = val * dgrid(1) * dgrid(2)
